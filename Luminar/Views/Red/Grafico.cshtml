@{
    ViewData["Title"] = "Gráfico de Red";
}
@Html.Hidden("urlNodosJson", Url.Action("NodosJson", "Home"))

<style type="text/css">
    #map {
        width: 100%;
        height: 100%;
        margin: 0;
        padding: 0;
        position: inherit;
    }

    .nodos, .nodos svg {
        position: inherit;
        overflow: visible;
    }

        .enlaces, .enlaces svg {
            position: inherit;
            overflow: visible;
        }

        .nodos svg {
            width: 70px;
            height: 30px;
            padding-right: 100px;
            font: 12px sans-serif;
            margin: 0px;
            padding: 0px;
        }

        .nodos circle {
            /*fill: green;  colorear segun estado */
            stroke: black;
            stroke-width: 1px;
        }
</style>
<script type="text/javascript" src="~/lib/signalr/signalr-client.js"></script>
<script type="text/javascript" src="~/lib/d3/d3.js"></script>
<script type="text/javascript" src="~/lib/jquery.blockUI/jquery.blockUI.js"></script>
<script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAopKI7FVTbOjblTHkpSWGhrg6o4dpyd_Y"></script>
<script type="text/javascript" src="~/js/grafico.js" asp-append-version="true"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">



<div id="map" style="width: 930px; height: 500px; float:left;"></div>

<div class="panel-group" id="accordion" style="float:right;">
    <div class="panel panel-default" id="panel1">
        <div class="panel-heading">
            <h4 class="panel-title">
                <a data-toggle="collapse" data-target="#collapseOne">
                    Notificaciones
                </a>
            </h4>

        </div>
        <div id="collapseOne" class="panel-collapse collapse in">
            <div class="panel-body">
                <ul class ="notificacion-panel" style="height: 200px; overflow: auto">
                </ul>
            </div>
        </div>
    </div>
</div>
